<div class="container">

  <h1>Add a new restaurant</h1>

  <%= simple_form_for @restaurant do |f| %>
    <%= f.input :name %>
    <%= f.input :category, collection: Restaurant::CATEGORIES %>
    <%= f.input :address %>
    <%= f.input :phone_number %>
    <%= f.submit "Add this restaurant", class: "btn btn-primary" %>
  <% end %>


</div>
